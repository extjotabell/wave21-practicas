spring:
  datasource:
    url: "jdbc:h2:mem:test-case"
    username: "admin"
    password: "admin"
    driver-class-name: "org.h2.Driver"
  sql:
    init:
      data-locations: classpath:scripts/load-test-cases.sql
      mode: always
  jpa:
    database-platform: "org.hibernate.dialect.H2Dialect"
    defer-datasource-initialization: true
    show-sql: true
    properties:
      hibernate:
        format_sql: true